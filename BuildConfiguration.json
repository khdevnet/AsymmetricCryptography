{
components: [
{
name: "security",
solution: "Security.sln",
properties: "/p:Configuration=Release /p:Platform="Any CPU""
}
],
build: {
tests: false,
codeQuality: false,
archive: true,
notifications: true
},
artifacts: "buildartifacts",
reports: "buildartifacts\reports",
reportsTemplates: "\jenkins-build-tool\buildtools\report\",
archive: [
"security/SecurityNews.Web/bin/**/*.*"
],
tests: {
wildcards: [
"security/Tests/*.Tests.dll"
]
},
codeQuality: {
fxcop: {
reports: [
"buildartifacts/reports/*.fxcop.xml"
],
wildcards: [
"watchshop/WatchShop.Api/bin/*.Api.dll",
"watchshop/WatchShop.Domain/bin/*.Domain.dll"
]
}
}
}
